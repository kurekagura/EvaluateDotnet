{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    /*追加*/
    "ReverseProxy": {
        "Routes": {
            "route1": {
                "ClusterId": "cluster1",
                "Match": {
                    "Path": "api/vv/{**catch-all}"
                },
                "Transforms": [
                    { "PathRemovePrefix": "api/vv" }
                ]
            }
        },
        "Clusters": {
            "cluster1": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://localhost:8055/"
                    }
                }
            }
        }
    }
    //"ExpectedApiKeys": [
    //    "YourExpectedApiKey1",
    //    "YourExpectedApiKey2",
    //    "YourExpectedApiKey3"
    //]
}
